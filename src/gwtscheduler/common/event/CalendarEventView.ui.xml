<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:org.cobogw.gwt.user.client.ui">

    <ui:style field="res" src="event.css"/>

    <ui:style>
        .header {
        width: 100%;
        background-color: #2952A3;
        text-align: center;
        font-size: 0.9em;
        color: #FFFFFF;
        cursor:default;
        float:left;
        }
        .content {
        background-color: #ABBFE0;
        padding-left: 5px;
        width: 100%;
        height: 100%;
        overflow: hidden;
        cursor:default;
        }
        .resizer {
        bottom:0;
        height:7px;
        line-height:7px;
        position:absolute;
        width:100%;
        }
        .rszricon {
        font-size:15px;
        font-weight:bold;
        text-align:center;
        height:100%;
        cursor:ns-resize;
        line-height:0;
        margin-left:auto;
        margin-right:auto;
        width:100%;
        }
        .roundedPanel{
        background-color: #ABBFE0;
        }

    </ui:style>
    <c:RoundedLinePanel ui:field="roundedPanel" styleName="{style.roundedPanel}">
        <g:HTMLPanel>
            <div>
                <g:FlowPanel>
                    <g:Label ui:field="eventHeader" styleName="{style.header}" text="Title"/>
                    <g:PushButton ui:field="closeBtn" styleName="{res.closeBtn}"/>
                </g:FlowPanel>

                <g:SimplePanel ui:field="contentPanel" styleName="{style.content}"/>

            </div>
            <div class="{style.resizer}">
                <g:Label ui:field="eventFooter" styleName="{style.rszricon}" text="-"/>
            </div>
        </g:HTMLPanel>
    </c:RoundedLinePanel>
</ui:UiBinder>