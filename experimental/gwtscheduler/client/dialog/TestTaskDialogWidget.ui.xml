<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:gwtscheduler.client.dialog" >

    <ui:style>
        .simple-panel {
        width: 100%;
        height: 100%;
        }
    </ui:style>

    <g:DialogBox ui:field="dialog">
    <g:HTMLPanel>
        <span>какво</span><d:TextInputFieldWidget ui:field="title"/>
        <br/>
        <span>старт : </span><d:TextInputFieldWidget ui:field="startDate"/>
        <span>час :</span><d:TextInputFieldWidget ui:field="startHour"/>
        <br/>
        <span>край : </span><d:TextInputFieldWidget ui:field="endDate"/>
        <span>час :</span><d:TextInputFieldWidget ui:field="endHour"/>
        <br/>
        <span>описание / коментар : </span><d:TextInputAreaWidget ui:field="description"/>
        <br/>
        <g:Button ui:field="ok"/><g:Button ui:field="cancel"/>
    </g:HTMLPanel>
    </g:DialogBox>

</ui:UiBinder>