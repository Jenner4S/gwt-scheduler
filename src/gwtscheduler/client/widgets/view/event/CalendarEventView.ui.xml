<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:org.cobogw.gwt.user.client.ui">

    
    <ui:style field="resStyle" type='gwtscheduler.client.widgets.view.event.CalendarEventView.ResStyle' src="event.css"/>
    <ui:style field="res" src="event.css"/>


    <ui:style>
      .header {
        width: 100%;
        background-color: #6694E3;
        text-align: center;
        font-size: 0.8em;
        color: #FFFFFF;
        cursor: default;
        padding-bottom: 0.05em;
        padding-top: 0.05em;
      }

      .content {
        padding-left: 5px;
        cursor: default;
        opacity: 0.7;
        height: 90%;
        font-size: 0.9em;
      }

      .resizer {
        bottom: 0;
        height: 15px;
        line-height: 7px;
        position: absolute;
        width: 100%;
        opacity: 0.7;
      }

      .rszrbutton {
        font-size: 15px;
        font-weight: bold;
        height: 100%;
        cursor: ns-resize;
        line-height: 0;
        margin-left: auto;
        margin-right: auto;
        width: 100%;
      }

      .html {
        background-color: #E0ECFF;
        border-bottom: 1px solid #6694E3;
        border-right: 1px solid #6694E3;
        border-left: 1px solid #6694E3;
        overflow: hidden;

        -webkit-border-top-left-radius: 6px;
        -webkit-border-top-right-radius: 6px;
        -moz-border-radius-topleft: 6px;
        -moz-border-radius-topright: 6px;
        border-top-left-radius: 6px;
        border-top-right-radius: 6px;
      }

      .rszricon {

        border-top: 3px double #000000;
        width: 10px;
        margin: 0 auto;
        position: absolute;
        bottom: 0;
        margin-bottom: 2px;
        margin-left: 49%;
      }

      .roundedPanel {

        border-color: #6694E3;
      }
    </ui:style>
    <g:HTMLPanel ui:field="roundedPanel" styleName="{style.roundedPanel}">
        <g:HTMLPanel ui:field="htmlPanel" styleName="{style.html}">
            <g:FlowPanel styleName="{res.headerFlowPanel}">
                <g:Label ui:field="eventHeader" styleName="{style.header}"/>
                <g:Image ui:field="closeBtn"/>
            </g:FlowPanel>
            <g:Label ui:field="contentPanel" styleName="{style.content}"/>
            <div class="{style.resizer}">
                <div class="{style.rszricon}"/>
                <g:Label ui:field="eventFooter" styleName="{style.rszrbutton}"/>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>
        