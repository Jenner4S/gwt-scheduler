<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:org.cobogw.gwt.user.client.ui">

    <ui:style field="res" src="event.css"/>

    <ui:style>
        .header {
        width: 100%;
        background-color: #6694E3;
        text-align: center;
        font-size: 0.9em;
        color: #FFFFFF;
        cursor:default;
        }
        .content {
        background-color: #E0ECFF;
        padding-left: 5px;
        cursor:default;
        overflow: hidden;
        height: 100%
        }
        .resizer {
        bottom:0;
        height:7px;
        line-height:7px;
        position:absolute;
        width:100%;
        }
        .rszricon {
        font-size:15px;
        font-weight:bold;
        text-align:center;
        height:100%;
        cursor:ns-resize;
        line-height:0;
        margin-left:auto;
        margin-right:auto;
        width:100%;
        }
        .test{
        text-align:center;
        border-top-style: double;
        position: absolute;
        }
        .roundedPanel{
        background-color: #ABBFE0;
        overflow: hidden;
        opacity:0.8;
        }
        .test2{
        background-color: #E0ECFF;
        border-bottom: 1px solid #6694E3;
        opacity: 0.8;
        }
        .test3{
        border-right: solid #6694E3;
        border-left: solid #6694E3;
        }
    </ui:style>
    <g:HTMLPanel ui:field="htmlPanel" styleName="{style.test2}">
        <c:RoundedLinePanel ui:field="roundedPanel">
            <g:FlowPanel styleName="{res.headerFlowPanel}">
                <g:Label ui:field="eventHeader" styleName="{style.header}" text="Title"/>
                <g:PushButton ui:field="closeBtn" styleName="{res.closeBtn}"/>
            </g:FlowPanel>
        </c:RoundedLinePanel>
        <div class="{style.test3}">
            <g:Label ui:field="contentPanel" styleName="{style.content}"/>
            <div class="{style.resizer}">
                <g:Label ui:field="eventFooter" styleName="{style.rszricon}" />
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>