<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:org.cobogw.gwt.user.client.ui">

	<ui:style>
        .header {
            width: 100%;
            background-color: #2952A3;
            text-align: center;
        }
        .content {
            background-color: #ABBFE0;
            padding-left: 5px;    
            width: 100%;
            height: 100%;
        }
        .footer {
            width: 100%;
            background-color: #ABBFE0;
            text-align: center;
            height: 10px;
            padding-bottom: 4px;
        }
	</ui:style>

	<c:RoundedLinePanel ui:field="roundedPanel" cornerColor="#2952A3" width="200px">
		<g:VerticalPanel styleName="cbg-RP" width="100%">
            <g:Label ui:field="eventHeader" styleName="{style.header}" text="Title"/>
            <g:VerticalPanel ui:field="contentPanel" styleName="{style.content}" />
            <g:Label ui:field="eventFooter" styleName="{style.footer}" text="="/>
		</g:VerticalPanel>
	</c:RoundedLinePanel>

</ui:UiBinder>