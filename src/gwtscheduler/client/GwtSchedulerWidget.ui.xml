<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <ui:style>
        .overlapPanel{
        position:absolute;
        width:100%;
        height:100%;
        margin-top:25px;
        cursor:not-allowed;
        background-color:grey;
        opacity:0.1;
        }

    </ui:style>


    <g:HTMLPanel>
        <div>
        <g:SimplePanel ui:field="overlapPanel" styleName="{style.overlapPanel}"></g:SimplePanel>
        <g:DecoratedTabPanel ui:field="tabsPanel"/>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>