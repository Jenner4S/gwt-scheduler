<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:days="urn:import:gwtscheduler.client.widgets.view.dayweek"
             xmlns:common="urn:import:gwtscheduler.client.widgets.view.common"
             xmlns:columns="urn:import:gwtscheduler.client.widgets.view.columns">

  <ui:style>
    .bottom {

      -webkit-border-bottom-right-radius: 8px;
      -webkit-border-bottom-left-radius: 8px;
      -moz-border-radius-bottomright: 8px;
      -moz-border-radius-bottomleft: 8px;
      border-bottom-right-radius: 8px;
      border-bottom-left-radius: 8px;

      background-color: #92C1F0;
      width: 100%;
      height: 6px;
    }
  </ui:style>

  <g:FlowPanel ui:field="impl">
    <columns:CalendarHeaderWidget ui:field="header"/>
    <columns:CalendarContentWidget ui:field="content"/>
    <g:HTMLPanel addStyleNames="{style.bottom}"/>
  </g:FlowPanel>
</ui:UiBinder> 