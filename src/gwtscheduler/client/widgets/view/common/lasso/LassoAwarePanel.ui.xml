<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:gwtscheduler.client.widgets.view.common"
	xmlns:l="urn:import:gwtscheduler.client.widgets.view.common.lasso">
	<ui:style>
		.scroll-panel {
			overflow-x: hidden;
			position: relative;
		}
		
		.container {
			width: 100%;
			height: 100%;
			overflow-x: hidden;
			position: absolute;
		}
		
		.lasso {
			position: absolute;
			left: 0;
			top: 0;
		}
	</ui:style>

	<g:VerticalPanel ui:field="impl">
		<s:AdaptableWindowPanel ui:field="windowPanel">
			<l:LassoPanel ui:field="lasso" styleName="{style.lasso}"/>
		</s:AdaptableWindowPanel>
	</g:VerticalPanel>

</ui:UiBinder> 