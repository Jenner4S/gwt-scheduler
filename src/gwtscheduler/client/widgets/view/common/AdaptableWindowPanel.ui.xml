<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.scroll-panel {
			overflow-x: hidden;
			position: relative;
		}
		
		.container {
			width: 100%;
			height: 100%;
			overflow-x: hidden;
		}
	</ui:style>

	<g:ScrollPanel ui:field="scrollPanel" styleName="{style.scroll-panel}">
		<g:AbsolutePanel ui:field="container" styleName="{style.container}">
		</g:AbsolutePanel>
	</g:ScrollPanel>

</ui:UiBinder> 