<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:days="urn:import:gwtscheduler.client.widgets.view.dayweek"
             xmlns:common="urn:import:gwtscheduler.client.widgets.view.common"
             xmlns:columns="urn:import:gwtscheduler.client.widgets.view.columns">

    <ui:style>
        .overlapPanel{
        position:absolute;
        width:100%;
        height:100%;
        margin-top:25px;
        cursor:not-allowed;
        background-color:grey;
        opacity:0.1;
        }
    </ui:style>
        <common:LassoAwarePanel ui:field="lassoAwarePanel">
            <g:SimplePanel ui:field="overlapPanel" styleName="{style.overlapPanel}"></g:SimplePanel>
            <common:EventsDashboardView ui:field="eventsDashboardView"/>
            <columns:CalendarColumnsFrameGridWidget ui:field="columnsPanel"/>
        </common:LassoAwarePanel>


</ui:UiBinder>